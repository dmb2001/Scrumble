<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="128dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/guideline_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/comment_1"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_2"
                app:layout_constraintStart_toEndOf="@id/guideline_2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_3"
                app:layout_constraintStart_toEndOf="@id/guideline_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_4"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_5"
                app:layout_constraintStart_toEndOf="@id/guideline_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_6"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_7"
                app:layout_constraintStart_toStartOf="parent"/>

            <include
                layout="@layout/comment"
                android:id="@+id/comment_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/comment_8"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/button_post_top_level_comment"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/ic_baseline_insert_comment_24"
        android:background="@drawable/circular_background"
        android:elevation="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>