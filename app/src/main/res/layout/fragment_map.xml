<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/button_new_post"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/ic_baseline_add_location_24"
        android:background="@drawable/circular_background"
        android:elevation="10dp"/>

    <ImageButton
        android:id="@+id/button_nav_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/ic_blank_profile_white_background"
        android:background="@drawable/circular_background"
        android:scaleType="centerInside"
        android:elevation="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <ImageView
        android:id="@+id/scrapbook_1_pin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_pin"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/guideline_2"
        app:layout_constraintBottom_toTopOf="@id/guideline_1"
        android:clickable="true"
        android:tint="@color/tint_1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_mid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <ImageView
        android:id="@+id/scrapbook_2_pin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_pin"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/guideline_4"
        app:layout_constraintBottom_toTopOf="@id/guideline_vertical_mid"
        android:clickable="true"
        android:tint="@color/tint_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <ImageView
        android:id="@+id/scrapbook_3_pin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_pin"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/guideline_6"
        app:layout_constraintBottom_toTopOf="@id/guideline_5"
        android:clickable="true"
        android:tint="@color/tint_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>