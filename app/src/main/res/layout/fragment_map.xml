<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/button_new_post"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/ic_baseline_add_location_24"
        android:background="@drawable/circular_background"
        android:elevation="10dp"
        app:tint="?attr/colorControlNormal"/>

    <ImageButton
        android:id="@+id/button_map_home"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@id/button_new_post"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/baseline_my_location_24"
        android:background="@drawable/circular_background"
        android:elevation="10dp"
        app:tint="?attr/colorControlNormal"/>

    <ImageButton
        android:id="@+id/button_nav_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"
        android:src="@drawable/ic_blank_profile_white_background"
        android:background="@drawable/circular_background"
        android:scaleType="centerInside"
        android:elevation="10dp"/>

    <ImageButton
        android:id="@+id/button_nav_settings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/button_nav_profile"
        app:layout_constraintEnd_toEndOf="@id/button_nav_profile"
        app:layout_constraintStart_toStartOf="@id/button_nav_profile"
        android:layout_margin="14dp"
        android:src="@drawable/baseline_settings_24"
        android:background="@drawable/circular_background"
        android:scaleType="centerInside"
        android:elevation="10dp"
        app:tint="?attr/colorControlNormal"/>

</androidx.constraintlayout.widget.ConstraintLayout>